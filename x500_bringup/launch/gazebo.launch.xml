<launch>

    <let name="urdf_path" 
         value="$(find-pkg-share x500_description)/models/x500/model.sdf.xacro" />
    
    <let name="robot_description"
               value="$(command 'xacro $(var urdf_path)')" />
                 
    <node pkg="robot_state_publisher" exec="robot_state_publisher" >
        <param name="robot_description" value="$(var robot_description)" />
    </node>

    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="-r empty.sdf" />
    </include>
    
    <node pkg="ros_gz_sim" exec="create"
          args="-topic robot_description -name drone" />

    <node pkg="ros_gz_bridge" exec="parameter_bridge">
        <param name="config_file" value="$(find-pkg-share x500_description)/models/x500/bridge.yaml" />
    </node>
</launch>