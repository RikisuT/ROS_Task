<launch>

    <!-- Path to your quadcopter SDF -->
    <let name="model_path"
         value="$(find-pkg-share drone_description)/urdf/quadcopter.sdf" />

    <!-- Start Gazebo with your SDF -->
    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="-v 4 $(var model_path)" />
    </include>

    <!-- Bridge using YAML config -->
    <node pkg="ros_gz_bridge" exec="parameter_bridge">
        <param name="config_file"
               value="$(find-pkg-share drone_description)/config/gz_bridge.yaml" />
    </node>

</launch>
